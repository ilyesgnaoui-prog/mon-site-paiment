  <script>
    // petits utilitaires de validation et formatage (d√©monstration)
    const email = document.getElementById('email');
    const nameI = document.getElementById('name');
    const card = document.getElementById('card');
    const exp = document.getElementById('exp');
    const cvc = document.getElementById('cvc');
    const amount = document.getElementById('amount');
    const totalDisplay = document.getElementById('total-display');
    const payBtn = document.getElementById('payBtn');
    const modal = document.getElementById('modal');
    const summary = document.getElementById('summary');

    function formatCard(v){
      return v.replace(/\s+/g,'').replace(/(\d{4})/g,'$1 ').trim();
    }
    card.addEventListener('input', e => {
      const pos = e.target.selectionStart;
      e.target.value = formatCard(e.target.value);
    });

    exp.addEventListener('input', e=>{
      let v = e.target.value.replace(/[^\d]/g,'').slice(0,4);
      if (v.length>2) v = v.slice(0,2)+'/'+v.slice(2);
      e.target.value = v;
    });

    amount.addEventListener('input', ()=> {
      let val = parseFloat(amount.value) || 0;
      totalDisplay.textContent = '‚Ç¨' + val.toFixed(2);
    });

    function validate(){
      if (!email.value.includes('@')) return 'Email invalide';
      if (nameI.value.trim().length < 2) return 'Nom invalide';
      if (card.value.replace(/\s/g,'').length < 13) return 'Num√©ro de carte trop court';
      if (!/^\d{2}\/\d{2}$/.test(exp.value)) return "Date d'expiration (MM/AA) invalide";
      if (cvc.value.length < 3) return 'CVC invalide';
      if (parseFloat(amount.value) < 0.5) return "Le montant doit √™tre ‚â• 0.50";
      return null;
    }

    payBtn.addEventListener('click', ()=>{
      const err = validate();
      if (err){
        alert('Erreur : ' + err);
        return;
      }
      // simulation d'un envoi : afficher un modal de succ√®s
      summary.textContent = `Merci ${nameI.value.trim()} ‚Äî un re√ßu a √©t√© (simul√©) envoy√© √† ${email.value.trim()}. Montant : ‚Ç¨${parseFloat(amount.value).toFixed(2)}.`;
      modal.style.display = 'flex';
      modal.setAttribute('aria-hidden','false');
    });

    function closeModal(){
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden','true');
    }

    // fermer modal au clic hors bo√Æte
    modal.addEventListener('click', (e)=>{
      if (e.target === modal) closeModal();
    });

    // accessibilit√©: Enter pour soumettre quand sur un champ
    [email,nameI,card,exp,cvc,amount].forEach(el=>{
      el.addEventListener('keydown', (e)=>{
        if (e.key === 'Enter') payBtn.click();
      });
    });
  </script>
